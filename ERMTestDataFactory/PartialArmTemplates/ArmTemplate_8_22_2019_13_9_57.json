{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "ERMTestDataFactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/ERMDFTestPipeline')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "ERMDFTestDataFlow",
						"type": "ExecuteDataFlow",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"dataflow": {
								"referenceName": "ERMDFTestDataFlow",
								"type": "DataFlowReference"
							}
						}
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/dataflows/ERMDFTestDataFlow')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ERMDFTestDataFlow')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "SourceCSVFromBlob",
								"type": "DatasetReference"
							},
							"name": "GetDataFromBlob"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "ERMSinkTable",
								"type": "DatasetReference"
							},
							"name": "ERMSink"
						}
					],
					"transformations": [
						{
							"name": "AggregateTheSource"
						}
					],
					"script": "\n\nsource(output(\n\t\tMeterCode as string,\n\t\tSerial as string,\n\t\tPlantCode as string,\n\t\tDateTime as date 'dd/MM/yyyy',\n\t\tQuality as string,\n\t\tStream as string,\n\t\tDataType as string,\n\t\tEnergy as double '###,###,###,###.###',\n\t\tUnits as string\n\t),\n\tallowSchemaDrift: true,\n\tvalidateSchema: false,\n\tpurgeFiles: true,\n\tinferDriftedColumnTypes: true) ~> GetDataFromBlob\nGetDataFromBlob aggregate(groupBy(MeterCode,\n\t\tDateTime,\n\t\tDataType),\n\tMedianValue = round(mean({Energy}))\r\n,\n\t\tMaximumValue = round(max({Energy}))\r\n,\n\t\tMinimumValue = round(min({Energy}))\r\n) ~> AggregateTheSource\nAggregateTheSource sink(input(\n\t\tId as integer,\n\t\tDate as date,\n\t\tMeterCode as string,\n\t\tDataType as string,\n\t\tAverageValue as double,\n\t\tMinimumValue as double,\n\t\tMaximumValue as double,\n\t\tMedianValue as double\n\t),\n\tallowSchemaDrift: true,\n\tvalidateSchema: false,\n\tformat: 'table',\n\tdeletable:false,\n\tinsertable:true,\n\tupdateable:false,\n\tupsertable:false,\n\tmapColumn(\n\t\tMeterCode,\n\t\tDate = DateTime,\n\t\tDataType,\n\t\tMedianValue,\n\t\tMaximumValue,\n\t\tMinimumValue\n\t)) ~> ERMSink"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceCSVFromBlob')]",
				"[concat(variables('factoryId'), '/datasets/ERMSinkTable')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceCSVFromBlob')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "SourceCSVFromBlobLinkedService",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"container": "blobcontainer"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "MeterCode",
						"type": "String"
					},
					{
						"name": "Serial",
						"type": "String"
					},
					{
						"name": "PlantCode",
						"type": "String"
					},
					{
						"name": "DateTime",
						"type": "String"
					},
					{
						"name": "Quality",
						"type": "String"
					},
					{
						"name": "Stream",
						"type": "String"
					},
					{
						"name": "DataType",
						"type": "String"
					},
					{
						"name": "Energy",
						"type": "String"
					},
					{
						"name": "Units",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ERMSinkTable')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ERMSinkTableDBLinkedService",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "Id",
						"type": "int",
						"precision": 10
					},
					{
						"name": "Date",
						"type": "date"
					},
					{
						"name": "MeterCode",
						"type": "varchar"
					},
					{
						"name": "DataType",
						"type": "varchar"
					},
					{
						"name": "AverageValue",
						"type": "float",
						"precision": 15
					},
					{
						"name": "MinimumValue",
						"type": "float",
						"precision": 15
					},
					{
						"name": "MaximumValue",
						"type": "float",
						"precision": 15
					},
					{
						"name": "MedianValue",
						"type": "float",
						"precision": 15
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "ERMSinkTable"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/TriggerToStartProcessingWhenThereIsABlob')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "As soon as there is a file in ermblob, the processing will start.",
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "ERMDFTestPipeline",
							"type": "PipelineReference"
						}
					}
				],
				"type": "BlobEventsTrigger",
				"typeProperties": {
					"blobPathBeginsWith": "/blobcontainer/blobs/",
					"blobPathEndsWith": ".csv",
					"scope": "/subscriptions/93493f2e-498c-4356-bbe8-2282407a6e98/resourceGroups/ERM/providers/Microsoft.Storage/storageAccounts/ermdfsourceblob",
					"events": [
						"Microsoft.Storage.BlobCreated"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/ERMDFTestPipeline')]"
			]
		}
	]
}